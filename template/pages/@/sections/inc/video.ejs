<%
if (opt.img) {
  %>

  <div class="banner">
    <a
      href="<%= opt.link || 'javascript:;' %>"
      aria-label="<%= opt.alt %>"
    >
    <video autoplay loop playsinline muted style="max-width: 100%; width: 100%;">
      <source media="(min-width: 576px)" src="<%= opt.img.replace('.webm', '') %>.webm" type="video/webm">
      <source media="(min-width: 576px)" src="<%= opt.img.replace('.webm', '') %>.mp4" type="video/mp4">
      <% if (opt.mobile_img) { %>
        <source media="(min-width: 100px)" src="<%= opt.mobile_img.replace('.webm', '') %>.webm" type="video/webm">
        <source media="(min-width: 100px)" src="<%= opt.mobile_img.replace('.webm', '') %>.mp4" type="video/mp4">
      <%
      }
      %>
    </video>
    </a>
  </div>
  <%
}
%>
